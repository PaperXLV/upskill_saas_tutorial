<div class="container">
    <div class="row">
        <h3 class="text-center">Contact Us</h3>
        
        
        <div class="col-md-4 col-md-offset-4">
            <div class="well">
                <%= form_for @contact do |f| %>
                    <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, class: 'form-control', placeholder: 'Jane Doe'%>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.text_field :email, class: 'form-control', placeholder: 'Jdoe@gmail.com' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :comment %>
                        <%= f.text_area :comment, class: 'form-control', placeholder: 
                        'Hey just wanted to let you know you\'re doing a great job here at DevMatch, thanks!' %>
                    </div>
                    
                    <%= f.submit 'Submit', class: 'btn btn-default' %>
                <% end %>
            </div>
        </div>
    </div>
</div>